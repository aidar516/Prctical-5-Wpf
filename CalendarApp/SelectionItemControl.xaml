<UserControl x:Class="CalendarApp.SelectionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalendarApp"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="CheckBox" VerticalAlignment="Center" Width="40"/>
        <Image x:Name="img" Grid.Column="1" Width="100"/>
        <TextBlock x:Name="TextBlock" Grid.Column="2" VerticalAlignment="Center" FontSize="30"/>
    </Grid>
</UserControl>
